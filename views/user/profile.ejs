<%- include('../partials/header') %>

<%- include('../partials/navigation') %>

<div class="jumbotron bg-light text-center">
    <h5>
        Welcome <i class="fas fa-user"></i> <%= loggedUser.firstName %>
    </h5>
    <a href="editProfile/<%= loggedUser._id %>" class="btn btn-success btn-lg mt-3 pr-5 pl-5">Edit Profile</a>
</div>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-9">
            <div class="card card shadow bg-white rounded">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>
                                <i class="far fa-id-badge"></i> First Name
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <p class="text-muted"><%= loggedUser.firstName %></p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>
                                <i class="far fa-id-badge"></i> Last Name
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <p class="text-muted"><%= loggedUser.lastName %></p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>
                                <i class="far fa-envelope"></i> Email
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <p class="text-muted"><%= loggedUser.email %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card card bg-primary text-white text-center mb-3">
                <div class="card-body">
                    <h3>My Posts</h3>
                    <h4 class="display-4">
                        <i class="fas fa-pencil-alt"></i> 12
                    </h4>
                    <a href="#" class="btn btn-outline-light btn-block mt-4">View</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>